{
  "name": "@mystikonetwork/contracts",
  "version": "0.0.9",
  "description": "package contains of Mystiko smart contracts",
  "main": "index.js",
  "repository": "https://github.com/mystikonetwork/mystiko-core",
  "author": "Mystiko.Network",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prettier:check": "prettier --check \"./**/*.{ts,sol}\" --config .prettierrc",
    "prettier:fix": "prettier --write \"./**/*.{ts,sol}\" --config .prettierrc",
    "prettier": "yarn prettier:fix",
    "lint": "solhint contracts/**/*.sol && eslint --ext .js,.ts .",
    "report-gas:summary": "REPORT_GAS=true hardhat test",
    "report-gas:benchmark": "hardhat test benchmark/*.ts",
    "size-contracts": "hardhat size-contracts | sed -r 's/[[:cntrl:]]\\[[0-9]{1,3}m//g' > reports/contract_sizes.txt",
    "clean": "hardhat clean && rm -rf artifacts && rm -rf artifactsExternal && rm -rf typechain",
    "build:hasher": "hardhat compile-hasher",
    "build:contract": "hardhat compile",
    "build:typechain": "hardhat typechain",
    "build": "yarn build:contract && yarn build:hasher && yarn build:typechain",
    "test": "hardhat test",
    "integration": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 600000 --delay --exit",
    "deploy": "yarn deploy:chain --network hardhat --step step1 --bridge loop --dst hardhat --token ETH && yarn deploy:chain --network hardhat --step step2 --bridge loop --dst hardhat --token ETH && yarn deploy:chain --network hardhat --step step3 --bridge loop --dst hardhat --token ETH",
    "deploy:chain": "hardhat migrate --config hardhat.config.deploy.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.7",
    "@babel/register": "^7.16.8",
    "@ethersproject/units": "5.5.0",
    "@ethersproject/wallet": "5.5.0",
    "@mystikonetwork/circuits": "^0.0.9",
    "@mystikonetwork/client": "^0.0.9",
    "@mystikonetwork/config": "^0.0.9",
    "@mystikonetwork/protocol": "^0.0.9",
    "@mystikonetwork/utils": "^0.0.9",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@tsconfig/recommended": "^1.0.1",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "bn.js": "^5.2.0",
    "chai": "^4.3.6",
    "circomlibjs": "^0.0.8",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "fs-extra": "^10.0.1",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.9.0",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-deploy": "^0.10.5",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solc": "0.8.10",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.6.0",
    "typechain": "^7.0.0",
    "typescript": "^4.6.2",
    "zokrates-js": "^1.0.39"
  }
}
