{
  "name": "@mystiko/contracts",
  "version": "0.0.4",
  "description": "package contains of Mystiko smart contracts",
  "main": "index.js",
  "repository": "https://github.com/mystikonetwork/mystiko-core",
  "author": "Mystiko.Network",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "mkdir -p build && truffle compile",
    "test": "truffle test",
    "integration": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 120000 --delay --exit",
    "lint": "solhint contracts/**/*.sol && eslint --ext .js,.ts .",
    "prettier:check": "prettier --check \"./**/*.{js,sol}\" --config .prettierrc",
    "prettier:fix": "prettier --write \"./**/*.{js,sol}\" --config .prettierrc",
    "prettier": "yarn prettier:fix",
    "migrate": "yarn migrate:dev",
    "migrate:dev": "truffle migrate --network development --reset",
    "deploy": "yarn deploy:dev",
    "deploy:dev": "truffle exec deploy/deploy.js --network development step1 && truffle exec deploy/deploy.js --network development step2  loop development ETH &&  truffle exec deploy/deploy.js --network development step3  loop development ETH ",
    "deploy:bsctestnet": "truffle exec deploy/deploy.js --network bsctestnet",
    "deploy:ropsten": "truffle exec deploy/deploy.js --network ropsten",
    "deploy:goerli": "truffle exec deploy/deploy.js --network goerli",
    "deploy:auroratestnet": "truffle exec deploy/deploy.js --network auroratestnet",
    "deploy:fantomtestnet": "truffle exec deploy/deploy.js --network fantomtestnet",
    "deploy:polygontestnet": "truffle exec deploy/deploy.js --network polygontestnet",
    "deploy:avalanchetestnet": "truffle exec deploy/deploy.js --network avalanchetestnet"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.7",
    "@babel/register": "^7.16.8",
    "@mystiko/circuits": "^0.0.4",
    "@mystiko/client": "^0.0.4",
    "@mystiko/config": "^0.0.4",
    "@mystiko/protocol": "^0.0.4",
    "@mystiko/utils": "^0.0.4",
    "@openzeppelin/contracts": "^3.4.2",
    "@truffle/contract": "^4.4.9",
    "@truffle/hdwallet-provider": "^2.0.3",
    "@tsconfig/recommended": "^1.0.1",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chai": "^4.3.6",
    "circomlibjs": "^0.0.8",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-truffle": "^0.3.1",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "ethers": "^5.5.4",
    "ganache-cli": "^6.12.2",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle": "^5.4.33",
    "truffle-plugin-verify": "^0.5.21",
    "ts-node": "^10.5.0",
    "typescript": "^4.6.2"
  }
}
