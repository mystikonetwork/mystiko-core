{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "indent": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "require-await": "error",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 110
      }
    ],
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "max-len": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "implicit-arrow-linebreak": "off"
  }
}
