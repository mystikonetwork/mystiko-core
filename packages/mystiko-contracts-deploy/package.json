{
  "name": "@mystikonetwork/contracts-deploy",
  "version": "0.1.0-beta.2",
  "description": "contracts deploy of mystiko core",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/cjs/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/mystikonetwork/mystiko-core",
    "directory": "packages/mystiko-conotracts-deploy"
  },
  "author": {
    "name": "Mystiko Network"
  },
  "keywords": [
    "mystiko",
    "web3",
    "ethereum",
    "cryptocurrency"
  ],
  "files": [
    "build"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "prettier:check": "prettier --check \"./**/*.{js,ts}\" --config .prettierrc",
    "prettier:fix": "prettier --write \"./**/*.{js,ts}\" --config .prettierrc",
    "prettier": "yarn prettier:fix",
    "deploy:loop": "yarn deploy:chain --network hardhat --step step1 --bridge loop --dst hardhat --token ETH && yarn deploy:chain --network hardhat --step step2 --bridge loop --dst hardhat --token ETH && yarn deploy:chain --network hardhat --step step3 --bridge loop --dst hardhat --token ETH",
    "deploy:bridge": "yarn deploy:chain --network hardhat --step step1 --bridge tbridge --dst hardhat --token MTT && yarn deploy:chain --network hardhat --step step2 --bridge tbridge --dst hardhat --token MTT && yarn deploy:chain --network hardhat --step step2 --bridge tbridge --dst hardhat --token mUSD && yarn deploy:chain --network hardhat --step step3 --bridge tbridge --dst hardhat --token MTT && yarn deploy:chain --network hardhat --step step3 --bridge tbridge --dst hardhat --token mUSD",
    "deploy": "yarn deploy:loop && yarn deploy:bridge",
    "deploy:chain": "hardhat migrate",
    "set": "hardhat set",
    "query": "hardhat query"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tsconfig/recommended": "^1.0.1",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@mystikonetwork/contracts-abi": "^0.1.0-beta.2",
    "@mystikonetwork/utils": "^0.1.0-beta.2",
    "ethers": "^5.5.3",
    "hardhat": "^2.9.0",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-deploy": "^0.10.5",
    "hardhat-gas-reporter": "^1.0.8"
  }
}
