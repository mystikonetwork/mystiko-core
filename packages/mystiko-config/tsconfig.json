{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*", "tests/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "typeRoots": ["node_modules/@types", "./src/types"]
  }
}
